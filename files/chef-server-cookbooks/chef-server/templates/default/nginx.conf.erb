  <%- if node['chef_server']['nagios']['enable'] -%>
  server {
    listen   <%= node['chef_server']['nagios']['port'] %>;
    server_name <%= node['fqdn'] %>;

    access_log /var/log/chef-server/nginx/nagios.access.log;
    error_log  /var/log/chef-server/nginx/nagios.error.log<%= node['chef_server']['lb']['debug'] ? " debug" : "" %>;

    auth_basic            "Private Chef Nagios";
    auth_basic_user_file  <%= File.join(node['chef_server']['nagios']['dir'], "etc", "htpasswd") %>;

    location / {
      root   /opt/chef-server/embedded/nagios/share/;
      index  index.php;
    }

    location /nagios {
      index index.php;
      alias /opt/chef-server/embedded/nagios/share/;
    }

    location /cgi-bin {
      alias /opt/chef-server/embedded/nagios/sbin;
    }

    location ~ ^/nagios/(.*\.php)$ {
      alias /opt/chef-server/embedded/nagios/share/$1;
      include <%= File.join(@dir, "etc", "fastcgi.conf") %>;
      fastcgi_pass 127.0.0.1:<%= node['chef_server']['nagios']['php_fpm_port'] %>;
    }

    location ~ \.cgi$ {
      root /opt/chef-server/embedded/nagios/sbin;
      rewrite ^/nagios/cgi-bin/(.*)\.cgi /$1.cgi break;
      include <%= File.join(@dir, "etc", "fastcgi.conf") %>;
      fastcgi_param AUTH_USER $remote_user;
      fastcgi_param REMOTE_USER $remote_user;
      fastcgi_param DOCUMENT_ROOT  /opt/chef-server/embedded/nagios/sbin;
      fastcgi_param SCRIPT_FILENAME    $fastcgi_script_name;
      fastcgi_pass 127.0.0.1:<%= node['chef_server']['nagios']['fcgiwrap_port'] %>;
    }  

    location ~ \.php$ {
      include <%= File.join(@dir, "etc", "fastcgi.conf") %>;
      fastcgi_pass 127.0.0.1:<%= node['chef_server']['nagios']['php_fpm_port'] %>;
    }  

  }
  <%- end -%>
