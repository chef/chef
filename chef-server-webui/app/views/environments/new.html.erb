<div id="block-tables" class="block">
  <div class="content">
    <h2 class="title">Environment <%= params[:id] %></h2>
    <div class="inner">
      <%= render "environments/navigation", :environment => @environment, :active => 'create'%>
    </div>
    <%= render 'environments/form',  :environment => @environment,
                                      :route => :environments,
                                      :method => :post,
                                      :form_url => environments_path,
                                      :form_id => 'create_environment',
                                      :form_for => 'create',
                                      :submit_name => "Create Environment",
                                      :submit_id => "create_environment_button",
                                      :new_object => true %>
  </div>
</div>