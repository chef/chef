mkdir -p /etc/chef/trusted_certs
<%= trusted_certs %>
<% end -%>

<%# Generate Ohai Hints -%>
<% unless @config[:hints].nil? || @config[:hints].empty? -%>
mkdir -p /etc/chef/ohai/hints

<% @config[:hints].each do |name, hash| -%>
cat > /etc/chef/ohai/hints/<%= name %>.json <<'EOP'
<%= Chef::JSONCompat.to_json(hash) %>
EOP
<% end -%>
<% end -%>

cat > /etc/chef/client.rb <<'EOP'
<%= config_content %>
EOP

cat > /etc/chef/first-boot.json <<'EOP'
<%= Chef::JSONCompat.to_json(first_boot) %>
EOP

<% unless client_d.empty? -%>
mkdir -p /etc/chef/client.d
<%= client_d %>
<% end -%>

echo "Starting the first <%= ChefUtils::Dist::Infra::PRODUCT %> Client run..."

<% if config[:disable_license_activation] %>
echo "License Activation is disabled. Please activate the license manually by running the 'chef-client [COMMAND]'"
<% else %>
echo "Using the LicenseID: #{config[:license_id]} to activate the Client. "
<% end %>

echo "Client Run Command: <%= start_chef %>"
<%= start_chef %>
