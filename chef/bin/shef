# TODO::EVIL
require "rubygems"
require "mixlib/cli"

require "irb"
require "irb/completion"

# TODO::EVIL
begin
  require "#{File.dirname(__FILE__)}/../lib/chef"
rescue LoadError
  # the bin got moved, e.g., by rubygems
end
require "chef/shef"

# dirty hack to make IRB initialize shef
module IRB
  class << self
    alias :run_original_config :run_config
  
    def run_config
      run_original_config
      Shef.init
    end
  end
end

Shef.parse_opts
IRB.start
